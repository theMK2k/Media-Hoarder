    "fast-levenshtein": "^2.0.6",
    "html-to-text": "^5.1.1",
    "humanize-plus": "^1.8.2",
    "lodash": "^4.17.15",
    "loglevel": "^1.6.4",
    "minimist": "^1.2.5",
    "moment": "^2.24.0",
    "os-locale": "^4.0.0",
    "request": "^2.88.0",
    "requestretry": "^4.1.1",
    "sqlite3": "^4.1.0",
    "textversionjs": "^1.1.3",
    "video.js": "^7.6.6",
    "vue": "^2.6.10",
    "vue-i18n": "^8.17.3",
    "vue-router": "^3.0.1",
    "vue-virtual-scroller": "^1.0.0-rc.2",
    "vuetify": "^2.0.7",
    "vuex": "^3.0.1",
    "xml2js": "^0.4.22"
