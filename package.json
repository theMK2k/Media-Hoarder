    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-es2015": "^6.24.1",
    "electron": "^7.2.4",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "nodemailer": "^6.4.11",
    "vue-cli-plugin-electron-builder": "^1.4.6",
    "vue-cli-plugin-i18n": "~1.0.1",
    "vue-template-compiler": "^2.6.10"
